<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_masjid1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#07ACC8"
        app:cardBackgroundColor="#07ACC8"
        android:layout_marginTop="-50sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38sp"
            android:layout_marginRight="38sp"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jadwal Sholat"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="25sp"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/lg_masjid"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0sp"
                        android:layout_marginBottom="23dp"
                        android:background="#07ACC8"
                        app:cardBackgroundColor="#07ACC8">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp">

                            <TextView
                                android:id="@+id/sbh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sholat Shubuh"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_below="@+id/sbh"
                                android:id="@+id/txt1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hello World!"
                                android:textColor="#fff"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0sp"
                        android:layout_marginBottom="23dp"
                        android:background="#07ACC8"
                        app:cardBackgroundColor="#07ACC8">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp">

                            <TextView
                                android:id="@+id/dha"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sholat Dhuha"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:textSize="18dp"
                                />

                            <TextView
                                android:layout_below="@+id/dha"
                                android:id="@+id/txt6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hello World!"
                                android:textColor="#fff"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0sp"
                        android:layout_marginBottom="23dp"
                        android:background="#07ACC8"
                        app:cardBackgroundColor="#07ACC8">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp">

                            <TextView
                                android:id="@+id/dhr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sholat Dhuhur"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:textSize="18dp"/>

                            <TextView
                                android:layout_below="@+id/dhr"
                                android:id="@+id/txt2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hello World!"
                                android:textColor="#fff"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0sp"
                        app:cardElevation="5dp"
                        android:layout_marginBottom="23dp"
                        android:background="#07ACC8"
                        app:cardBackgroundColor="#07ACC8">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp">

                            <TextView
                                android:id="@+id/ash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sholat Ashar"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:textSize="18dp"/>

                            <TextView
                                android:layout_below="@+id/ash"
                                android:id="@+id/txt3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hello World!"
                                android:textColor="#fff"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0sp"
                        app:cardElevation="5dp"
                        android:layout_marginBottom="23dp"
                        android:background="#07ACC8"
                        app:cardBackgroundColor="#07ACC8">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp">

                            <TextView
                                android:id="@+id/mgr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sholat Magrib"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:textSize="18dp"/>

                            <TextView
                                android:layout_below="@+id/mgr"
                                android:id="@+id/txt4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hello World!"
                                android:textColor="#fff"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0sp"
                        app:cardElevation="5dp"
                        android:layout_marginBottom="23dp"
                        android:background="#07ACC8"
                        app:cardBackgroundColor="#07ACC8">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp">

                            <TextView
                                android:id="@+id/ish"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sholat Isha'"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:textSize="18dp"/>

                            <TextView
                                android:layout_below="@+id/ish"
                                android:id="@+id/txt5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hello World!"
                                android:textColor="#fff"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38sp"
        android:layout_marginRight="38sp"
        android:layout_marginTop="23dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Jadwal Sholat"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="25sp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0sp"
                    app:cardBackgroundColor="#fff"
                    android:background="#fff"
                    android:layout_marginTop="23sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/shubuh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Sholat Shubuh"
                            android:layout_margin="10sp"/>

                        <EditText
                            android:id="@+id/dhuha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Sholat Dhuha"
                            android:layout_margin="10sp"
                            android:layout_below="@id/shubuh"/>

                        <EditText
                            android:id="@+id/dhuhur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Sholat Dhuhur"
                            android:layout_margin="10sp"
                            android:layout_below="@id/dhuha"/>

                        <EditText
                            android:id="@+id/ashar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Sholat Ashar"
                            android:layout_margin="10sp"
                            android:layout_below="@id/dhuhur"/>

                        <EditText
                            android:id="@+id/maghrib"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Sholat Magrib"
                            android:layout_margin="10sp"
                            android:layout_below="@id/ashar"/>

                        <EditText
                            android:id="@+id/isha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Sholat Isha'"
                            android:layout_margin="10sp"
                            android:layout_below="@id/maghrib"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1C7BDF"
                app:cardBackgroundColor="#1C7BDF"
                app:cardCornerRadius="5sp"
                app:cardElevation="3sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:layout_margin="10sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnkembali2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#DF1C1C"
                app:cardBackgroundColor="#DF1C1C"
                app:cardCornerRadius="5sp"
                app:cardElevation="3sp"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kembali"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:layout_margin="10sp"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>