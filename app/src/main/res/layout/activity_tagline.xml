<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tagline"
    android:background="@drawable/bg_masjid1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#07ACC8"
        app:cardBackgroundColor="#07ACC8"
        android:layout_marginTop="-50sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38sp"
            android:layout_marginRight="38sp"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tagline Masjid"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="25sp"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/lg_masjid"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0sp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#07ACC8">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp">

                    <TextView
                        android:id="@+id/tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Isi Tagline"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="18dp"/>

                    <TextView
                        android:layout_below="@+id/tag"
                        android:id="@+id/txt1tagline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello World!"
                        android:textColor="#fff"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38sp"
        android:layout_marginRight="38sp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Tagline"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="25sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0sp"
            app:cardElevation="5dp"
            android:background="#fff"
            app:cardBackgroundColor="#fff"
            android:layout_marginTop="23sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tagline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Isi Tagline"
                    android:layout_margin="10sp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1C7BDF"
                app:cardBackgroundColor="#1C7BDF"
                app:cardCornerRadius="10sp"
                app:cardElevation="3sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:layout_margin="10sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnkembali6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#DF1C1C"
                app:cardBackgroundColor="#DF1C1C"
                app:cardCornerRadius="10sp"
                app:cardElevation="3sp"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kembali"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:layout_margin="10sp"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>